<!DOCTYPE html>
<html lang="en">

<%- include("partials/_header") %>

    <body>
        <%- include("partials/_menu") %>

            <div class="container center">
                <h1>Kayıt Olunan Meskenler</h1>
                <div class="row">
                    <% for (let i=0; i< user.meskenler.length; i++) { %>
                        <div class="col-lg-2 col-md-2 col-12">
                            <div class="course-item mb-5">
                                <div class="image-blog">
                                    <img src="/assets/images/ev4.jpg" alt="" class="img-fluid">
                                </div>
                                <div class="course-br">
                                    <div class="course-title">
                                        <h2 style=" text-align: center;"><a href="/users/<%= user.meskenler[i].slug %>"
                                                title="">
                                                <%= user.meskenler[i].name %>
                                            </a></h2>
                                    </div>
                                    <div class="course-desc">
                                        <p>
                                            <%= user.meskenler[i].description %>
                                        </p>
                                        <form method="POST" action="/users/release">
                                            <input type="hidden" name="mesken_id" value="<%= user.meskenler[i]._id %>">
                                            <div>
                                                <button class="btn btn-primary"
                                                    onclick="return confirm('Meskenden Ayrılmak İstiyor musunuz?')"><span>Ayrıl</span></button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div><!-- end col -->
                        <% } %>
                </div><!-- end row -->
            </div>




            <%- include("partials/_footer") %>
                <%- include("partials/_jslib") %>
    </body>

</html>