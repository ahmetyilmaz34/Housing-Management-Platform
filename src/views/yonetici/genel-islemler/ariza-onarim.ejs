<!DOCTYPE html>
<html lang="en">

<%- include("../partials/_header") %>

   <body class="sb-nav-fixed">
      <%- include("../partials/_navbar") %>
         <div id="layoutSidenav">
            <%- include("../partials/_menu") %>
               <div id="layoutSidenav_content">
                  <main>
                     <div class="container-fluid px-4">
                        <h1 class="mt-4">Arıza-Onarım Yönetimi</h1>
                        <div class="row">
                           <div class="container" style="padding-top:100px;">
                              <div class="row">
                                 <div class="col-lg-12">
                                    <div class="row ">
                                       <!-- gallery -->
                                       <div class="gallery">
                                          <div class="container_with">
                                             <div class="row">
                                                <div class="col-md-12">
                                                   <div class="titlepage text_align_center">
                                                      <h2>Arıza Bildirimleri</h2>
                                                   </div>
                                                </div>
                                             </div>
                                             <div class="tz-gallery">
                                                <div class="row">
                                                   <% for (photo of photos) { %>
                                                      <div class="col-lg-4 col-md-6 ma_bottom30">
                                                         <div class="lightbox">
                                                            <img src="<%= photo.url %>" alt="<%= photo.name %>">
                                                            <div class="view_main">
                                                               <div class="pose">
                                                                  <a class="read_more"
                                                                     href="/yonetici/photos/<%= photo._id %>"><img
                                                                        src="/assets/images/ga.png" alt="#" /></a>
                                                                  <h3 style="padding-top:10px ; padding-bottom: 10px;">
                                                                     <%= photo.name %>
                                                                  </h3>
                                                                  <p style="padding-top: 10px;">
                                                                     <%= photo.description.substring(0,80)+"..." %>
                                                                  </p>
                                                               </div>
                                                            </div>
                                                         </div>
                                                      </div>
                                                      <%} %>
                                                </div>
                                             </div>
                                          </div>
                                       </div>
                                       <!-- end gallery -->
                                    </div>

                                 </div>
                              </div>
                           </div>
                        </div>
                     </div>
                  </main>
               </div>
         </div>

         <%- include("../partials/_footer") %>
            <%- include("../partials/_jslib") %>
   </body>

</html>