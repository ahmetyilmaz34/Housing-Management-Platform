<!DOCTYPE html>
<html lang="en">

<%- include("../partials/_header") %>

  <body class="sb-nav-fixed">
    <%- include("../partials/_navbar") %>
      <div id="layoutSidenav">
        <%- include("../partials/_menu") %>
          <div id="layoutSidenav_content">
            <main>
              <div class="container-fluid px-4">
                <div class="row">
                 
                  <div
                    class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h2">Arama Sonuçları</h1>
                    <div class="btn-toolbar mb-2 mb-md 0">
                      <div class="btn-group me-2">
                        <a href="/yonetici/demirbas/add" class="btn btn-sm btn-outline-secondary">Yeni Kayıt Ekle</a>
                        <a href="/yonetici/demirbas/home" class="btn btn-sm btn-outline-secondary">Demirbaş Listesi</a>
                      </div>
                    </div>
                  </div>

                  <div class="table-responsive">
                    <% if (demirbaslar !="" ) { %>

                      <table class="table table-striped table-sm">
                        <thead>
                          <tr>
                            <th scope="col">Demirbaş Adı</th>
                            <th scope="col">Demirbaş Tür</th>
                            <th scope="col">Adet</th>
                            <th scope="col">Konum</th>
                            <th scope="col" class="text-end">İşlem</th>
                          </tr>
                        </thead>
                        <tbody>
                          <% demirbaslar.forEach(element=> { %>
                            <tr class="align-middle">
                              <td>
                                <%= element.demirbasAdi %>
                              </td>
                              <td>
                                <%= element.demirbasTur %>
                              </td>
                              <td>
                                <%= element.adet %>
                              </td>
                              <td>
                                <%= element.konum %>
                              </td>
                              <td>

                                <div class="d-flex flex-row justify-content-end gap-2">

                                  <a href="/yonetici/demirbas/view/<%= element._id %>" type="button" class="btn btn-primary btn-small">
                                    <i class="bi bi-eye"></i>
                                  </a>

                                  <a href="/yonetici/demirbas/edit/<%= element._id %>" type="button" class="btn btn-warning btn-small">
                                    <i class="bi bi-pencil"></i>
                                  </a>

                                  <form action="/yonetici/demirbas/edit/<%= element._id %>?_method=DELETE" method="POST"
                                    class="position-relative">
                                    <button type="submit" class="btn btn-danger btn-small">
                                      <i class="bi bi-person-x"></i>
                                    </button>
                                  </form>

                                </div>

                              </td>
                            </tr>
                            <% }) %>
                        </tbody>
                      </table>

                      <% } else { %>
                        <h2>Sonuç yok</h2>
                        <% } %>

                  </div>
                </div>
              </div>
            </main>
          </div>
      </div>
      <%- include("../partials/_footer") %>
        <%- include("../partials/_jslib") %>
  </body>

</html>