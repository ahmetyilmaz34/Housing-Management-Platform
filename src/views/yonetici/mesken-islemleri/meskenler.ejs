<!DOCTYPE html>
<html lang="en">

<%- include("../partials/_header") %>

    <body class="sb-nav-fixed">
            <%- include("../partials/_navbar") %>
            <div id="layoutSidenav">
                <%- include("../partials/_menu") %>
                    <div id="layoutSidenav_content">
                        <main>
                            <div class="container-fluid px-4">
                                <h1 class="mt-4">Meskenler</h1>
                                <div class="row">
								
									
									<div id="overviews" class="section wb">
										<div class="container">
											<div class="row"> 
								
												<div class="col-lg-9 blog-post-single">
													<% if (flashMessages) { %>
								
								
														<% if (flashMessages.success) { %>
															<div class="alert alert-success">
																<%= flashMessages.success %>
															</div>
									
														<% } else if (flashMessages.error) { %>
															<div class="alert alert-danger">
																<%= flashMessages.error %>
															</div>
														<% } %>
									
													<% } %>
												<div class="row"> 
								
											<% for (let i=0; i< meskenler.length; i++) { %>
												<div class="col-lg-3 col-md-3 col-12">
													<div class="course-item mb-5">
														<div class="image-blog">
															<a href="/yonetici/mesken/<%= meskenler[i].slug %>" title=""><img src="/assets/images/ev4.jpg" alt="" class="img-fluid"></a>
														</div>
														<div class="course-br">
															<div class="course-title">
																<a href="/yonetici/mesken/<%= meskenler[i].slug %>" title=""><h2><%= meskenler[i].name %></h2></a>
															</div>
															<div class="course-desc">
																<p><b>Oda Sayısı:</b> <%= meskenler[i].odaSayisi%></p>
																<p><b>Metre Kare:</b> <%= meskenler[i].metreKare%></p>
																<p><%= meskenler[i].description.substring(0, 100) + "..." %></p>
															</div>
														</div>
														
													</div>
												</div><!-- end col -->
								
											<% } %>
									
											</div><!-- end row -->
													
												</div><!-- end col -->
												<div class="col-lg-3 col-12 right-single">
													<div class="widget-search">
														<div class="site-search-area">
															<form method="GET" id="site-searchform" action="/yonetici/all-mesken">
																<div>
																	<input class="input-text form-control" name="search" id="search-k" placeholder="Arama" type="text">
																	<button id="searchsubmit" value="Search" type="submit"></button>
																</div>
															</form>
														</div>
													</div>
													<div class="widget-categories">
														<h3 class="widget-title">Bloklar</h3>
														<ul>
															<% for (let i=0; i< categories.length; i++) { %>
															<li><a href="/yonetici/all-mesken/?categories=<%= categories[i].slug %>"><%= categories[i].name %></a></li>
															<% } %>	
														</ul>
													</div>
												</div>
											</div><!-- end row -->
										</div><!-- end container -->
									</div><!-- end section -->
                                </div>
                            </div>
                        </main>
                    </div>
            </div>

                <%- include("../partials/_jslib") %>
    </body>

</html>








	



