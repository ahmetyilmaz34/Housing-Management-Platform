<!DOCTYPE html>
<html lang="en">

<%- include("../partials/_header") %>

  <body class="sb-nav-fixed">
    <%- include("../partials/_navbar") %>
      <div id="layoutSidenav">
        <%- include("../partials/_menu") %>
          <div id="layoutSidenav_content">
            <main>
              <div class="container-fluid px-4">

                <div class="row">
                  <!--  customers -->
                  <div class="row">
                    <div class="col-md-12">
                      <div class="satteb text_align_center">

                        <h2>
                          <%= user.name %>
                        </h2>
                        <i><img src="/assets/images/profil.jpg" alt="#" width="150em" height="150em" /></i>
                      </div>
                    </div>
                  </div>
                  <!-- end customers  -->
                  <div class="gallery mt-5">
                    <div class="container_with">
                      <div class="row">
                        <div class="col-md-12">
                          <div class="titlepage text_align_center">
                            <h2>Kişisel Bilgiler</h2>

                            <ul class="list-group">
                              <li class="list-group-item">
                                <div class="row">
                                  <div class="col" style="max-width: 140px"> <b>Ad Soyad:</b></div>
                                  <div class="col">
                                    <%= user.name %>
                                  </div>
                                </div>
                              </li>
                              <li class="list-group-item">
                                <div class="row">
                                  <div class="col" style="max-width: 140px"> <b>Email:</b></div>
                                  <div class="col">
                                    <%= user.email %>
                                  </div>
                                </div>
                              </li>
                              <li class="list-group-item">
                                <div class="row">
                                  <div class="col" style="max-width: 140px"> <b>Rol:</b></div>
                                  <div class="col">
                                    <%= user.role %>
                                  </div>
                                </div>
                              </li>
                            </ul>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>

                  <div class="gallery mt-5">
                    <div class="container_with">
                      <div class="row">
                        <div class="col-md-12">
                          <div class="titlepage text_align_center">
                            <h2>Mesken Bilgileri</h2>
                          </div>
                        </div>
                      </div>
                      <div class="tz-gallery">
                        <h1>Kayıt Olunan Meskenler</h1>

                        <div class="row">
                          <% for (let i=0; i< user.meskenler.length; i++) { %>
                            <div class="col-lg-2 col-md-2 col-12">
                              <div>
                                <div>
                                  <a href="/yonetici/mesken-yonetici-bilgi/<%= user.meskenler[i].slug %>/<%= user.id %>" title="">
                                  <img src="/assets/images/ev4.jpg" alt="" class="img-fluid">
                                </a>
                                </div>
                                <div>
                                  <div>
                                      <h2><a href="/yonetici/mesken-yonetici-bilgi/<%= user.meskenler[i].slug %>/<%= user.id %>" title="">
                                        <%= user.meskenler[i].name %>
                                      </a></h2>
                                  </div>
                                  <div>
                                    <p>
                                      <%= user.meskenler[i].description %>
                                    </p>
                         
                                  </div>
                                </div>
                              </div>
                            </div><!-- end col -->
                            <% } %>
                        </div><!-- end row -->

                      </div>
                    </div>
                  </div>

               


                  <div class="gallery mt-5">
                    <div class="container_with">
                      <div class="row">
                        <div class="col-md-12">
                          <div class="titlepage text_align_center">
                            <h2>Arıza Bildirimleri</h2>
                          </div>
                        </div>
                      </div>
                      <div class="tz-gallery">
                        <div class="row">

                          <% for (photo of photos) { %>
                            <div class="col-lg-4 col-md-6 ma_bottom30">
                              <div class="lightbox">
                                <img src="<%= photo.url %>" alt="<%= photo.name %>">
                                <div class="view_main">
                                  <div class="pose">
                                    <a class="read_more" href="/yonetici/photos/<%= photo._id %>"><img
                                        src="/assets/images/ga.png" alt="#" /></a>
                                    <h3 style="padding-top:10px; padding-bottom:10px">
                                      <%= photo.name %>
                                    </h3>
                                    <p style="padding-top:10px;">
                                      <%= photo.description.substring(0, 80)+ "..." %>
                                    </p>
                                  </div>
                                </div>
                              </div>
                            </div>

                            <% } %>

                        </div>
                      </div>
                    </div>
                  </div>



                </div>
              </div>
            </main>
          </div>
      </div>

      <%- include("../partials/_footer") %>
        <%- include("../partials/_jslib") %>
  </body>

</html>